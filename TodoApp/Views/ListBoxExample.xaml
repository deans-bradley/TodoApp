<Window x:Class="TodoApp.Views.ListBoxExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp.Views"
        mc:Ignorable="d"
        Title="ListBoxExample" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Todo List -->
        <ListBox Grid.Row="0" ItemsSource="{Binding TodoItems}" DisplayMemberPath="Title" Margin="10" />

        <!-- Add Todo Section -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <TextBlock Text="Title" HorizontalAlignment="Left" />
            <TextBox x:Name="txtTitle" Width="300" Margin="0,5,0,10" Text="{Binding Title, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Description"/>
            <TextBox x:Name="txtDescription" Width="300" Margin="0,5,0,10" Text="{Binding Description, Mode=TwoWay}" HorizontalAlignment="Left"/>
            <Button Content="Add Todo" Width="300" Command="{Binding AddTodoCommand}" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</Window>
